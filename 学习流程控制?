import time
print("课题：流程控制")
a=10
time.sleep(1)
if a==15:
    print("a=15")
else:
    print("a≠15")
time.sleep(1)
if a==10:
    print("a=10")
else:
    print("a≠10")
time.sleep(1)
print("""




""")
